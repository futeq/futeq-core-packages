{
  "branches": [
    "main",
    { "name": "develop", "prerelease": "alpha", "channel": "alpha" }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    ["@semantic-release/exec", {
      "prepareCmd": "bash -lc 'mkdir -p artifacts; for csproj in src/FQ.*/*.csproj; do dotnet pack \"$csproj\" -c Release -o artifacts /p:ContinuousIntegrationBuild=true /p:Version=${nextRelease.version}; done'",
      "publishCmd": "bash -lc 'dotnet nuget push artifacts/*.nupkg --api-key ${NUGET_API_KEY} --source https://api.nuget.org/v3/index.json --skip-duplicate'"
    }],
    ["@semantic-release/git", { "assets": ["CHANGELOG.md"], "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}" }],
    "@semantic-release/github"
  ]
}
